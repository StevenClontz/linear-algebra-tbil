<?xml version="1.0" encoding="utf-8"?>
<!--
    This file provides the overall configuration for your PreTeXt
    project. To edit the content of your document, open `source/main.ptx`
    (default location).
-->
<project>
  <targets>
    <target name="web">
      <format>html</format>
      <source>source/main.ptx</source>
      <publication>publication/publication.ptx</publication>
      <output-dir>output/web</output-dir>
      <deploy-dir>./2023</deploy-dir>
      <stringparam key="debug.project.number" value="the-way-it-should-be"/>
    </target>
    <target name="print">
      <format>pdf</format>
      <source>source/main.ptx</source>
      <publication>publication/publication.ptx</publication>
      <output-dir>output/print</output-dir>
      <deploy-dir>./2023/pdf</deploy-dir>
      <stringparam key="debug.project.number" value="the-way-it-should-be"/>
    </target>
    <target name="extract-slides">
      <format>custom</format>
      <source>source/main.ptx</source>
      <publication>publication/publication.ptx</publication>
      <output-dir>output/slide-extraction</output-dir>
      <xsl>xsl/extract-slideshow.xsl</xsl>
      <stringparam key="debug.project.number" value="the-way-it-should-be"/>
      <!-- Provide these programmatically! -->
      <!-- <output-filename>[xml_id].ptx</output-filename> -->
      <!-- <stringparam key="section" value="[xml_id]"/> -->
    </target>
    <target name="slides">
      <format>custom</format>
      <source>source/main.ptx</source>
      <publication>publication/publication.ptx</publication>
      <output-dir>output/slides</output-dir>
      <xsl>xsl/slideshow.xsl</xsl>
      <deploy-dir>./2023</deploy-dir>
      <!-- Provide these programmatically! -->
      <!-- <source>output/slide-extraction/[xml_id].ptx</source> -->
      <!-- <output-filename>[xml_id].slides.html</output-filename> -->
    </target>
    <target name="checkit"><!-- built manually -->
      <!-- everything except deploy-dir is unused but needed for validation -->
      <format>custom</format>
      <source>source/main.ptx</source>
      <publication>publication/publication.ptx</publication>
      <output-dir>output/checkit</output-dir>
      <xsl>NOT_IMPLEMENTED</xsl>
      <deploy-dir>./2023/exercises</deploy-dir>
    </target>
  </targets>
  <executables>
      <latex>latex</latex>
      <pdflatex>pdflatex</pdflatex>
      <xelatex>xelatex</xelatex>
      <pdfsvg>pdf2svg</pdfsvg>
      <asy>asy</asy>
      <sage>sage</sage>
      <pdfpng>convert</pdfpng>
      <pdfeps>pdftops</pdfeps>
      <node>node</node>
      <liblouis>file2brl</liblouis>
    </executables>
</project>